
@{
    ViewData["Title"] = "AboutUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageTitle {
    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">About Us</h1>
                <p class="lead fw-normal text-white-50 mb-0">Everything you need to Know</p>
            </div>
        </div>
    </header>
}


<style>
    /* Text Gradient Effect */
    .text-gradient {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    /* Hover Zoom Effect */
    .hover-zoom {
        transition: transform 0.3s ease;
    }

        .hover-zoom:hover {
            transform: scale(1.05);
        }

    /* Shadow and Rounded Corners */
    .shadow-lg {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    /* Spacing and Typography */
    .display-4 {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .lead {
        font-size: 1.25rem;
        color: #6c757d;
    }
</style>
<!-- About Us Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-gradient">Our Journey</h1>
            <p class="lead text-muted">Our Journey, Our Story</p>
        </div>

        <!-- Section 1: How It Started -->
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <h2 class="fw-bold text-primary">How It Started</h2>
                <p class="text-muted">
                    Our journey began with a simple idea: to create a platform where people can find high-quality products at affordable prices.
                    What started as a small online store has now grown into a trusted e-commerce brand, serving thousands of happy customers.
                </p>
            </div>
            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&h=400&q=80"
                     alt="How It Started"
                     class="img-fluid rounded shadow-lg hover-zoom">
            </div>
        </div>

        <!-- Section 2: Our Mission -->
        <div class="row align-items-center mb-5">
            <div class="col-md-6 order-md-2">
                <h2 class="fw-bold text-success">Our Mission</h2>
                <p class="text-muted">
                    Our mission is to provide an exceptional shopping experience by offering a wide range of products, excellent customer service,
                    and fast delivery. We believe in making online shopping simple, enjoyable, and accessible to everyone.
                </p>
            </div>
            <div class="col-md-6 order-md-1">
                <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&h=400&q=80"
                     alt="Our Mission"
                     class="img-fluid rounded shadow-lg hover-zoom">
            </div>
        </div>

        <!-- Section 3: Our Team -->
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <h2 class="fw-bold text-warning">Our Team</h2>
                <p class="text-muted">
                    Behind every successful business is a dedicated team. Our team is made up of passionate individuals who work tirelessly to ensure
                    that our customers are satisfied and our business continues to grow. We are proud of what we have achieved together.
                </p>
            </div>
            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&h=400&q=80"
                     alt="Our Team"
                     class="img-fluid rounded shadow-lg hover-zoom">
            </div>
        </div>
    </div>
</section>