@model Address

@{
    List<Address> addresses = ViewBag.Addresses;
}


<div class="container mt-5">

    <div class="row">
        @foreach(var addres in addresses)
        {
            <div class="col-md-4 mb-2">
                <div class="card">
                    <div class="card-body">
                        <h5>@addres.User.UserName</h5>
                        <p>@addres.AddressLine, @addres.City @addres.State - @addres.PinCode</p>
@*                         <a asp-controller="Checkout" asp-action="Confirm" asp-route-addressId="@addres.Id" class="btn btn-primary">Deliver Here</a>
 *@               
                          <a asp-controller="Checkout" asp-action="ThankYou" asp-route-addressId="@addres.Id" class="btn btn-primary">Deliver Here</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="AddressLine" class="control-label"></label>
            <input asp-for="AddressLine" class="form-control" />
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="State" class="control-label"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PinCode" class="control-label"></label>
            <input asp-for="PinCode" class="form-control" />
            <span asp-validation-for="PinCode" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
           <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
