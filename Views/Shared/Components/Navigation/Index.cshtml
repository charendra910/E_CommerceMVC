@using E_CommerceMVC.ViewModels

@model NavigationViewModel

  <!-- Navigation-->
<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light pt-3 pb-3">
    <div class="container-fluid px-4 px-lg-5">
        <a class="navbar-brand fw-bolder" asp-controller="Home" asp-action="Index" asp-area="">Ecommerce Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 fw-bolder mb-lg-0 ms-lg-4">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">Our Story</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Categories
                    </a>
                    <ul class="dropdown-menu shadow-lg" aria-labelledby="navbarDropdown">
                        <li>
                            <a class="dropdown-item d-flex justify-content-between align-items-center" asp-area="" asp-controller="Products" asp-action="Index">
                                All Products
                                <span class="badge bg-primary rounded-pill">New</span>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Category" asp-route-category="Electronics">
                                <i class="bi bi-laptop me-2"></i>Electronics
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Category" asp-route-category="Clothing">
                                <i class="bi bi-tshirt me-2"></i>Clothing
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Category" asp-route-category="Home">
                                <i class="bi bi-house-door me-2"></i>Home & Garden
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Contactus" asp-action="AddContactUs">
                                <i class="bi bi-headset me-2"></i>Contact Us
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>

            <!-- Search Bar -->
            <form class="d-flex flex-grow-1 mx-2 mx-lg-5" asp-controller="Products" asp-action="Index" method="get">
                <div class="input-group rounded-pill">
                    <input class="form-control rounded-pill" type="search" name="searchTerm"
                           placeholder="Search for products . . . . ."
                           value="@Context.Request.Query["searchTerm"]"
                           aria-label="Search">
                    <button class="btn btn-outline-primary rounded-pill ms-1" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>

            <partial name="_LoginPartial" />

            <form asp-controller="Cart" asp-action="Index" asp-area="" class="d-flex">
                <button class="btn btn-outline-primary position-relative" type="submit">
                    <i class="bi-cart-fill me-1"></i>
                    Cart
                    @if (Model.Cart == null)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                    }
                    else
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary">@Model.Cart.Count</span>
                    }
                </button>
            </form>
        </div>
    </div>
</nav>

<style>
    /* Custom dropdown styling - Original untouched */
    .dropdown-menu {
        border: none;
        border-radius: 10px;
        padding: 0.5rem;
        transition: all 0.3s ease;
    }

    .dropdown-item {
        border-radius: 8px;
        padding: 0.5rem 1rem;
        margin: 0.15rem 0;
        transition: all 0.2s ease;
        font-weight: 500;
    }

        .dropdown-item:hover, .dropdown-item:focus {
            background-color: #0d6efd;
            color: white !important;
            transform: translateX(5px);
        }

        .dropdown-item.active, .dropdown-item:active {
            background-color: #0d6efd;
            color: white;
        }

    /* Search bar styling */
    .input-group {
        max-width: 600px; /* Adjust as needed */
    }

    .input-group-text {
        border-left: none !important;
        background-color: transparent !important;
    }

    .form-control {
        border-right: none !important;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

    /* Cart button animation */
    .btn-outline-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>