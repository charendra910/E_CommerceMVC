@model E_CommerceMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">
            <i class="fas fa-info-circle me-2"></i>Product Details
        </h2>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Product Image -->
            <div class="col-md-4 p-3 border-end">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="img-fluid rounded" alt="@Model.Name">
                }
                else
                {
                    <div class="text-center py-4 bg-light rounded">
                        <i class="fas fa-image text-muted fa-3x"></i>
                    </div>
                }
            </div>

            <!-- Product Details -->
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <h5 class="text-success mb-4">$ @Model.Price</h5>

                    <div class="mb-4">
                        <h6 class="text-muted">Description</h6>
                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Model.Description
                            }
                            else
                            {
                                <span class="text-muted">No description available</span>
                            }
                        </p>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn {
        min-width: 100px;
    }
</style>