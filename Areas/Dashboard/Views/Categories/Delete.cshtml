@model E_CommerceMVC.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">
    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-trash-alt me-2"></i>Delete Category
                </h3>
                <a asp-action="Index" class="btn btn-sm btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Back to Categories
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="alert alert-warning border-start border-4 border-warning">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>Warning!
                </h4>
                <p class="mb-0">This action will permanently delete the category and cannot be undone.</p>
            </div>

            <div class="row">
                <!-- Category Image -->
                <div class="col-md-4 mb-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" class="img-fluid rounded shadow-sm" style="max-height: 200px" alt="@Model.Name">
                    }
                    else
                    {
                        <div class="p-4 bg-light rounded">
                            <i class="fas fa-tag fa-4x text-muted"></i>
                        </div>
                    }
                </div>

                <!-- Category Details -->
                <div class="col-md-8">
                    <h4 class="text-primary mb-3">@Model.Name</h4>

                    <div class="mb-3">
                        <h5 class="text-muted mb-2">Description</h5>
                        <p>@(string.IsNullOrEmpty(Model.Description) ? "No description available" : Model.Description)</p>
                    </div>

                    <div class="bg-light p-3 rounded">
                        <p class="small text-muted mb-1">
                            <i class="fas fa-info-circle me-2"></i>
                            Deleting this category will affect all associated products.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        border-width: 2px;
    }

    .alert {
        border-left: none;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .btn {
        transition: all 0.2s;
        min-width: 160px;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
</style>