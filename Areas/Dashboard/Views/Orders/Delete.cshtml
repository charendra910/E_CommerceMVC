@model E_CommerceMVC.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container py-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Delete Order Confirmation
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">Warning!</h5>
                <p class="mb-0">This action will permanently delete the order and cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">Order Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Order ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">User #@Model.User.Id</dd>

                        <dt class="col-sm-4">Shipping Address</dt>
                        <dd class="col-sm-8">Address #@Model.Address.Id</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8 text-danger fw-bold">$ @Model.Amount</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Cancelled" ? "danger" : "warning")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Orders
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 8px;
        border-width: 2px;
    }

    .alert {
        border-left: 4px solid #ffc107;
    }

    .badge {
        padding: 0.35em 0.65em;
        font-size: 0.875em;
    }

    .btn {
        min-width: 150px;
    }
</style>