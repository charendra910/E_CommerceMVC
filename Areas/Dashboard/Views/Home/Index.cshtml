@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.2.96/css/materialdesignicons.min.css" rel="stylesheet">

<style>
    .btn-circle {
        border-radius: 100%;
        width: 40px;
        height: 40px;
        padding: 5px;
        line-height: 30px;
        text-align: center;
    }

    .btn-secondary {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .row {
        --bs-gutter-x: 20px;
        --bs-gutter-y: 0;
        display: flex;
        justify-content: center;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 700px;
    }

    .card-body h6 {
        margin-bottom: 10px;
    }

    .map-box iframe {
        border-radius: 5px;
    }

    .mt-4 {
        margin-top: 2rem;
    }

    .card-title {
        padding: 20px 0 15px 0;
        font-size: 25px;
        font-weight: 500;
        color: #012970;
        font-family: "Poppins", sans-serif;
    }
</style>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-10 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Admin</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Profile Column -->
            <div class="card">
                <div class="card-body">
                    <center class="mt-4">
                        <img src="https://ui-avatars.com/api/?name=Harendra+Chaudhary&size=150&background=4e73df&color=fff"
                             class="rounded-circle" width="150" />
                        <h1 class="card-title mt-2">Harendra Chaudhary</h1>
                        <h6 class="card-subtitle mb-0">Administrator</h6>
                    </center>
                </div>
                <div><hr></div>
                <div class="card-body text-center mt-0">
                    <small class="text-muted">Email address</small>
                    <h6 class="mt-1">harendratharu0@gmail.com</h6>
                    <small class="text-muted pt-4 db">Phone</small>
                    <h6>+91 9956303809</h6>
                    <small class="text-muted pt-4 db">Address</small>
                    <h6>Rajkot, Gujarat, India</h6>
                    <br />
                    <div class="map-box">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3691.716050558667!2d70.7828573149546!3d22.29142938532793!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3959ca248c77c099%3A0xdf5ac10af64ac8ee!2sRajkot%2C%20Gujarat!5e0!3m2!1sen!2sin!4v1620000000000!5m2!1sen!2sin"
                                width="100%" height="250" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <br />
                    <small class="text-muted pt-4 db">Social Profile</small>
                    <br />
                    <div class="mt-1">
                        <button class="btn btn-circle btn-secondary"><i class="mdi mdi-facebook"></i></button>
                        <button class="btn btn-circle btn-secondary"><i class="mdi mdi-twitter"></i></button>
                        <button class="btn btn-circle btn-secondary"><i class="mdi mdi-linkedin"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>