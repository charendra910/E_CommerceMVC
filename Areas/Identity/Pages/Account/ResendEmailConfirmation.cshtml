@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="#4f46e5">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
                </svg>
            </div>
            <h2>Resend Email Confirmation</h2>
            <p>Enter your email to receive a new verification link</p>
        </div>

        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-group">
                <input asp-for="Input.Email" class="form-control"
                       aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="auth-btn">Resend Confirmation</button>

            <div class="auth-footer">
                <p>Remembered your account? <a asp-page="./Login">Sign In</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    .auth-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 1rem;
    }

    .auth-card {
        background: white;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-icon {
        margin-bottom: 1rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-8px);
        }
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        font-size: 1rem;
    }

    .auth-btn {
        width: 100%;
        padding: 12px;
        background-color: #4f46e5;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: 500;
        font-size: 1rem;
        transition: all 0.2s;
        margin-top: 1rem;
    }

        .auth-btn:hover {
            background-color: #4338ca;
            transform: translateY(-1px);
        }

    .auth-footer {
        margin-top: 1.5rem;
        text-align: center;
    }

        .auth-footer a {
            color: #4f46e5;
            text-decoration: none;
        }

            .auth-footer a:hover {
                text-decoration: underline;
            }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}